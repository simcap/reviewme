<% @reviews.each do |review| %>
  <div class="review <%= review.status %> span-24 last">
	<div class="subject span-24">
		<span class="smaller left"><%= review.date.to_s(:short) %></span>
		<span>Bug in production</span>
		<span class="smaller right"><%= review.branch %></span>
	</div>
	<div class="publisher span-4">
		<span><%= gravatar_image_tag review.publisher_email , :class => "gravatar", :alt => review.publisher_name %></span>
	</div>

	<div class="commits span-20 last">
		<% review.commits.each do |commit| %>
			<div class="commit">
				<span class="commit-hash"><%= commit.shorthash %></span>
				<span class="commit-message"><%= commit.message %></span>
			</div>
			<div class="commit">
				<span class="commit-hash"><%= commit.shorthash %></span>
				<span class="commit-message"><%= commit.message %></span>
			</div>
		<% end %>
	</div>

	<div class="review-actions span-24 last">
		<span><%= button_to 'Done by', review_path(review, :done_by => 'Simon'), :method => :put %></span>
		<span><%= button_to 'Discard', review, :confirm => 'Are you sure you want to delete this review?', :method => :delete %></span>
	</div>

  </div>
<% end %>
