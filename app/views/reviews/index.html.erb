<% @reviews.each do |review| %>
  <div class="review <%= review.status %>">
	<span><%= review.date.to_s(:short) %></span>
	<span><%= gravatar_image_tag review.publisher_email , :class => "gravatar", :alt => review.publisher_name %></span>
	<% if review.status = :done %>
		<span><%= review.done_by %></span>
	<% end %>
	<% review.commits.each do |commit| %>
		<div>
			<span><%= commit.branch %></span>
			<span><%= commit.shorthash %></span>
			<span><%= commit.message %></span>
			<span><%= link_to 'Done by', review_path(review, :done_by => 'Simon'), :method => :put %></span>
			<span><%= link_to 'Discard', review, :confirm => 'Are you sure you want to delete this review?', :method => :delete %></span>
		</div>
	<% end %>
  </div>
<% end %>
