<% @reviews.each do |review| %>
  <div class="review <%= review.status %>">
	<div class="publisher">
		<span><%= review.publisher_name %></span>
		<span><%= gravatar_image_tag review.publisher_email , :class => "gravatar", :alt => review.publisher_name %></span>
		<span class="date"><%= review.date.to_s(:short) %></span>
		<% if review.status = :done %>
			<span><%= review.done_by %></span>
		<% end %>
	</div>

	<div class="commits">
		<% review.commits.each do |commit| %>
			<div>
				<span><%= commit.branch %></span>
				<span><%= commit.shorthash %></span>
				<span><%= commit.message %></span>
			</div>
		<% end %>
	</div>

	<div class="review-action">
		<span><%= button_to 'Done by', review_path(review, :done_by => 'Simon'), :method => :put %></span>
		<span><%= button_to 'Discard', review, :confirm => 'Are you sure you want to delete this review?', :method => :delete %></span>
	</div>

  </div>
<% end %>
