<% @reviews.each do |review| %>
  <ul>
	<li><%= review.date %></li>
	<li><%= review.status %></li>
	<li><%= review.done_by %></li>
	<% review.commits.each do |commit| %>
		<ul>
			<li><%= commit.branch %></li>
			<li><%= commit.shorthash %></li>
			<li><%= commit.email %></li>
			<li><%= commit.message %></li>
			<li><%= link_to 'Done by', review_path(review, :done_by => 'Simon'), :method => :put %></li>
			<li><%= link_to 'Discard', review, :confirm => 'Are you sure you want to delete this review?', :method => :delete %></li>
		</ul>
	<% end %>
  </ul>
<% end %>
